Завдання 1
#include <iostream> //Підключення бібліотеки для роботи з введенням-виведенням
#include <math.h> //Підключення бібліотеки для математичних обчислень
#include <stdlib.h> //Підключення бібліотеки для окремих математичних обчислень
using namespace std;
//Функція для обчислення виразу
int main()
{
	cout << "Student Olha Yezerska, gr SE-12 lab1 var5" << endl;
	cout << "Calculate expression X = ( A - |B/C| ) / ( 2.75 * sin(D)^2 )" << endl;
	float A, B, C, D, result; //Оголошення змінних
	cout << " Input A: "; //Отримання значення А від користувача
	cin >> A; //Внесення значення до програми
	cout << " Input B: "; //Отримання значення В від користувача
	cin >> B; //Внесення значення до програми
	cout << " Input C: "; // Отримання значення С від користувача
	cin >> C; //Внесення значення до програми
	cout << " Input D: "; // Отримання значення D від користувача
	cin >> D; //Внесення значення до програми
	if ((C == 0) || (2.75 * (sin(D) * sin(D)) == 0)) //Перевірка введених даних
	{
		cout << "Wrong";
	}
	else 
	{
		result = (A - abs((B / C))) / (2.75 * (sin(D) * sin(D))); //Обчислення результату
		cout << " X = ( A - |B/C| ) / ( 2.75 * sin(D)^2 ) = " << result << endl; //Виведення результату
	}
	system("pause");
} //Кінець програми
Завдання 2
#include <iostream> //Підключення бібліотеки для роботи з введенням-виведенням
#include <math.h> //Підключення бібліотеки для математичних обчислень
#include <cmath>
using namespace std;
//Функція для обчислення відстані між двома точками
int main()
{
	cout << "Student Olha Yezerska, gr SE-12 lab1 var5" << endl;
	cout << "Calculate the distance from one point to another" << endl;
	float x0, y0, x1, y1, result; //Оголошення змінних
	cout << "Enter x0: "; //Отримання значення х0 від користувача
	cin >> x0; //Внесення значення до програми
	cout << "Enter y0: "; //Отримання значення у0 від користувача
	cin >> y0; //Внесення значення до програми
	cout << "Enter x1: "; //Отримання значення х1 від користувача
	cin >> x1; //Внесення значення до програми
	cout << "Enter y1: "; //Отримання значення у1 від користувача
	cin >> y1; //Внесення значення до програми
	result = sqrt(pow(x1 - x0, 2) + pow(y1 - y0, 2)); //Обчислення результату
	cout << "Distance: " << result; //Виведення результату на екран користувачеві
	system("pause");
} //Кінець програми
